<%- include("partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Add new comment to <%=campground.name%></h1>
		<div style="width:30%; margin:20px auto ">
			<form action="/campground/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comments[text]" placeholder="Enter Text">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="comments[author]" placeholder="Author name">
				</div> -->
				<div class="form-group">
					<button class="btn btn-lg btn-primary" type="submit">Submit</button>
				</div>
			</form>
			<a href="/campground/<%=campground._id%>">Go Back</a>
		</div>
		
	</div>
	
</div>


<%- include("partials/footer") %>
