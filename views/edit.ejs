<%- include("partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Edit <%=campground.name%> Campground</h1>
		<div style="width:30%; margin:20px auto ">
			<form action="/campground/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" value="<%=campground.name%>"">
				</div>	
				<div class="form-group">
					<input class="form-control" type="text" name="camp[image]" value="<%=campground.image%>" >
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="camp[price]" value="<%=campground.price%>" >
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[description]" value="<%=campground.description%>"  placeholder="Enter Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary" type="submit">Submit</button>
				</div>
			</form>
			<a href="/campground">Go Back</a>
		</div>
		
	</div>
	
</div>


<%- include("partials/footer") %>
																						   
				